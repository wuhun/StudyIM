<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studyim.cn.edu.cafa.studyim">

    <!-- 获取手机状态-例如手机串号 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 网络是否可用 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- 硬件加速对X5视频播放非常重要，建议开启 -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">

        <!-- <meta-data -->
        <!-- android:name="com.amap.api.v2.apikey" -->
        <!-- android:value="高德地图的 AppKey" /> -->


        <!-- 欢迎界面 -->
        <activity
            android:name=".activity.login.WelcomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/WelcomeTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录 -->
        <activity
            android:name=".activity.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <!-- 主页 -->
        <activity
            android:name=".activity.main.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.main.StudyShearchActivity"
            android:label="@string/title_activity_study_shearch"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name="tools.com.lvliangliang.wuhuntools.permission.PermissionActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.other.DetailUserInfoActivity" />
        <activity android:name=".activity.other.SetUserRemarkName" />
        <activity android:name=".activity.other.SendAddFriendActivity" />
        <activity android:name=".activity.other.FriendGetAddListActivity" />
        <activity android:name=".activity.other.FriendGetinfoActivity" />
        <activity android:name=".activity.other.SessionActivity" />
        <!-- 会话页面 -->
        <activity
            android:name=".activity.rong.ConversationListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <!-- ${packageName} -->
                <data
                    android:host="${packageName}"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <!-- 聚合会话列表,显示 -->
        <activity
            android:name=".activity.rong.SubConversationListActivtiy"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="${packageName}"
                    android:pathPrefix="/subconversationlist"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.other.GroupSelectFriendActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.other.GroupCreateActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.other.WebViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name=".activity.other.GroupDetailMenuActivity" />
        <activity android:name=".activity.other.GroupAddFriendActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${packageName}.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rc_file_path" />
        </provider>

        <activity android:name=".activity.other.GroupFilesActivity" />
        <activity android:name=".activity.other.DetailImgActivity"></activity>
    </application>

</manifest>