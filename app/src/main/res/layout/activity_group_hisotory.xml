<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="studyim.cn.edu.cafa.studyim.activity.other.GroupHistoryActivity">

    <include layout="@layout/head_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">
        <tools.com.lvliangliang.wuhuntools.ui.ClearWriteEditText
            android:id="@+id/edit_search_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/rc_edit_text_background_selector"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/btn_green_selecter"
            android:text="搜索"
            android:textColor="@color/white"/>
    </LinearLayout>

    <tools.com.lvliangliang.wuhuntools.widget.recyclerview.WuhunRecyclerView
        android:id="@+id/rc_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
