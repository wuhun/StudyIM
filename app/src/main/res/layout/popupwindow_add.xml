<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:background="@drawable/popwindow_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_friend_list"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_common_item"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_request_list"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pop_add_user_list" />

            <TextView
                android:id="@+id/tv_request_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_request_list"
                android:drawablePadding="10dp"
                android:paddingLeft="14dp"
                android:text="请求列表"
                android:textColor="@color/tag_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_create_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_common_item"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_create_group"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pop_create_group" />

            <TextView
                android:id="@+id/tv_create_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_create_group"
                android:drawablePadding="10dp"
                android:paddingLeft="14dp"
                android:text="创建群组"
                android:textColor="@color/tag_text_color"
                android:textSize="16sp" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>