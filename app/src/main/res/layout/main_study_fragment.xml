<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- title -->
    <RelativeLayout
        android:id="@+id/rl_me_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/head_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_bg"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/body_img_menu"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="8dp"
            android:src="@drawable/sidebar"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/body_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="学习"/>
        <ImageView
            android:id="@+id/body_search"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/searchl"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_tab_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="全部"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp" />
        </RelativeLayout>
        <View style="@style/yLine" />
        <RelativeLayout
            android:id="@+id/rl_tab_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="班级"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp" />
        </RelativeLayout>
        <View style="@style/yLine" />
        <RelativeLayout
            android:id="@+id/rl_tab_lead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="机构"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/Line" />

    <FrameLayout
        android:id="@+id/fl_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</android.support.v7.widget.LinearLayoutCompat>